extends layout 
block content
    div(id="pcoded" class="pcoded")
        .pcoded-overlay-box
        div(class="pcoded-container navbar-wrapper")
            include components/navbar.pug
            .pcoded-main-container
                .pcoded-wrapper
                    include components/sidebar.pug
                    .pcoded-content
                        .pcoded-inner-content
                            .main-body#clientesView
                                .page-wrapper
                                    .page-body
                                        .row 
                                            .col-12
                                                .card
                                                    .card-header
                                                        h4 Clientes activos
                                                    .card-block.table-border-style
                                                        .col-12
                                                            .table-responsive
                                                                table.table(id="tblData")
                                                                    thead
                                                                        tr
                                                                            th Nombre Completo
                                                                            th Direcci√≥n
                                                                    tbody
                                                                        tr(v-for="(cliente, index) in clientes")
                                                                            td {{cliente.name}}
                                                                            td {{cliente.direccion}}
                                                                            td 
                                                                                a(:href=" '/cliente/actualizar/' + cliente.clienteId ")
                                                                                    button.btn.bg-primary(title="Actualizar los datos del cliente" data-toggle="tooltip")
                                                                                        i.ti-pencil
                                                                       
                                                                        
